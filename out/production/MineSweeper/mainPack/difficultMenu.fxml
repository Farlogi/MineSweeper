<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/10.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainPack.DifficultMenuController">
    <children>
        <ImageView fitHeight="500.0" fitWidth="400.0" pickOnBounds="true">
            <image>
                <Image url="@resources/saper.jpg" />
            </image>
        </ImageView>
        <Button fx:id="easyModeButton" blendMode="HARD_LIGHT" layoutX="49.0" layoutY="70.0" mnemonicParsing="false" prefHeight="7.0" prefWidth="302.0" text="Easy" textAlignment="CENTER">
            <font>
                <Font name="Serif Regular" size="37.0" />
            </font>
        </Button>
      <Button fx:id="mediumModeButton" blendMode="HARD_LIGHT" layoutX="49.0" layoutY="195.0" mnemonicParsing="false" prefHeight="7.0" prefWidth="302.0" text="Medium" textAlignment="CENTER">
         <font>
            <Font name="Serif Regular" size="38.0" />
         </font>
      </Button>
      <Button fx:id="hardModeButton" blendMode="HARD_LIGHT" layoutX="49.0" layoutY="324.0" mnemonicParsing="false" prefHeight="7.0" prefWidth="302.0" text="Hard" textAlignment="CENTER">
         <font>
            <Font name="Serif Regular" size="38.0" />
         </font>
      </Button>
    </children>
</Pane>
